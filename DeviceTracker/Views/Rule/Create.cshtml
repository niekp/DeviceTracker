@model Rule

@{
    using (Html.BeginForm())
    {
        <input type="hidden" asp-for="DeviceId" />
        <div class="form-group row">
            <label asp-for="NotifyAfter" class="col-sm-2 col-form-label">Stuur bericht na</label>
            <div class="col-sm-10">
                <input type="time" asp-for="NotifyAfter" class="form-control">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Active" class="col-sm-2 col-form-label">Actief</label>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Active" id="Active.0" value="@ActiveState.Active">
                    <label class="form-check-label" for="Active.0">
                        Actief
                    </label>
                    <br />
                    <input class="form-check-input" type="radio" asp-for="Active" id="Active.1" value="@ActiveState.Inactive">
                    <label class="form-check-label" for="Active.1">
                        Niet actief
                    </label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Toevoegen</button>
    }
}